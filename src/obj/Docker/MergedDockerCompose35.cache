services:
  envoy-proxy:
    environment:
      ENVOY_UID: '0'
    image: envoyproxy/envoy:v1.16-latest
    ports:
    - 5201:80/tcp
    - 15201:9901/tcp
    volumes:
    - C:\Users\hafiz.roslan.HARTALEGA\Documents\Workspaces\Projects\HartaRPA\src\ApiGateways\Envoy:/etc/envoy:rw
    - C:\Users\hafiz.roslan.HARTALEGA\Documents\Workspaces\Projects\HartaRPA\src\ApiGateways\Envoy\ssl\cert.pem:/etc/ssl/certs/cert.pem:rw
    - C:\Users\hafiz.roslan.HARTALEGA\Documents\Workspaces\Projects\HartaRPA\src\ApiGateways\Envoy\ssl\key.pem:/etc/ssl/certs/key.pem:rw
    - proto-pb:/tmp/envoy/:rw
  envoy-volume:
    build:
      context: C:\Users\hafiz.roslan.HARTALEGA\Documents\Workspaces\Projects\HartaRPA\src
      dockerfile: ApiGateways/Envoy/Dockerfile
    image: harta/envoy.volume:linux-latest
    volumes:
    - proto-pb:/tmp/:rw
  file-service:
    build:
      context: C:\Users\hafiz.roslan.HARTALEGA\Documents\Workspaces\Projects\HartaRPA\src
      dockerfile: Services/File/File.API/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: http://+:80
      GRPC_PORT: '81'
      PATH_BASE: /file-svc
      PORT: '80'
    image: harta/file.service:linux-latest
    ports:
    - 80/tcp
    - 9101:81/tcp
    - 5101:443/tcp
version: '3.4'
volumes:
  proto-pb: {}